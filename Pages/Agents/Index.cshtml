@page
@model flight_management_system.Pages.Agents.IndexModel
@{
}
<div class="head-img">
    <img src="https://images.pexels.com/photos/1089306/pexels-photo-1089306.jpeg?auto=compress&cs=tinysrgb&w=600" />
</div>
<div class="content-left">
    <a class="button-style" href="/Agents/Register"> + Register agent</a>
    <h2 class="color-white">List of agents</h2>
    <table class="styled-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Agency</th>
                <th>Username</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.listAgents)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.agency</td>
                    <td>@item.username</td>
                    <td>
                        <a class="edit-btn" href="/Agents/Edit?id=@item.id">Edit</a>
                        <a class="delete-btn" href="/Agents/Delete?id=@item.id" onclick="return confirm('Are you sure you want to delete this aircraft?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
