@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "admin")]
@model flight_management_system.Pages.Aircraft.IndexModel
@{
}
<div class="head-img">
    <img src="https://calaero.edu/wp-content/uploads/2023/08/iStock-1332501286-scaled.jpg" />
</div>
<div class="content-left">    
    <a class="button-style" href="/Aircraft/Register"> + Register aircraft</a>
    <h2 class="color-white">List of aircrafts</h2>
    <table class="styled-table">
        <thead>
            <tr>
                <th>Aircraft Id</th>
                <th>Aircraft Type</th>
                <th>Aircraft Capacity</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.listAircrafts)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Type</td>
                    <td>@item.Capacity</td>
                    <td>
                        <a class="edit-btn" href="/Aircraft/Edit?id=@item.Id">Edit</a>
                        <a class="delete-btn" href="/Aircraft/Delete?id=@item.Id" onclick="return confirm('Are you sure you want to delete this aircraft?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>