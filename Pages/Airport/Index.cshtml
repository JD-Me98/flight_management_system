@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "admin")]
@model flight_management_system.Pages.Airport.IndexModel
@{
}

<div class="head-img">
    <img src="https://calaero.edu/wp-content/uploads/2023/08/iStock-1332501286-scaled.jpg" />
</div>
<div class="content-left">    
    <a class="button-style" href="/Airport/Register"> + Register airports</a>
    <h2 class="color-white">List of airports</h2>
    <table class="styled-table">
        <thead>
            <tr>
                <th>Airport Id</th>
                <th>Airport Name</th>
                <th>Airport Location</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.listAirports)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Location</td>
                    <td><img src="/uploads/@item.Image" width="100" alt="Alternate Text" /></td>
                    <td>
                        <a class="edit-btn" href="/Airport/Edit?id=@item.Id">Edit</a>
                        <a class="delete-btn" href="/Airport/Delete?id=@item.Id" onclick="return confirm('Are you sure you want to delete this airport?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>