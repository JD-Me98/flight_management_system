@page
@model flight_management_system.Pages.Employee.IndexEmployeeModel
@{
}
<div class="head-img">
    <img src="https://calaero.edu/wp-content/uploads/2023/08/iStock-1332501286-scaled.jpg" />
</div>
<div class="content-left">
    <a class="button-style" href="/Employee/RegisterEmployee"> + Register Employee</a>
    <h2 class="color-white">List of employees</h2>
    <table class="styled-table">
        <thead>
            <tr>
                <th>Employee Id</th>
                <th>Employee Fullnames</th>
                <th>Employee Date of Birth</th>
                <th>Employee Position</th>                
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.listEmployees)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Fullname</td>
                    <td>@item.DateOfBirth</td>
                    <td>@item.Position</td>
                    <td>
                        <a class="edit-btn" href="/Employee/Edit?id=@item.Id">Edit</a>
                        <a class="delete-btn" href="/Employee/DeleteEmployee?id=@item.Id" onclick="return confirm('Are you sure you want to delete this airport?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>