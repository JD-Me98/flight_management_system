@page
@model flight_management_system.Pages.Flight.IndexModel
@{
}
<div class="head-img">
    <img src="https://calaero.edu/wp-content/uploads/2023/08/iStock-1332501286-scaled.jpg" />
</div>
<div class="content-left">
    <a class="button-style" href="/Flight/Register"> + Register flights</a>
    <h2 class="color-white">List of Flights</h2>
    <table class="styled-table">
        <thead>
            <tr>
                <th>Flight Id</th>
                <th>Departure</th>
                <th>Arrival</th>
                <th>Origin</th>
                <th>Destination</th>
                <th>Aircraft</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.listFlights)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Departure</td>
                    <td>@item.Arrival</td>
                    <td>@item.Origin</td>
                    <td>@item.Destination</td>
                    <td>@item.Aircraft</td>
                    <td>
                        <a class="edit-btn" href="/Flight/Edit?id=@item.Id">Edit</a>
                        <a class="delete-btn" href="/Flight/Delete?id=@item.Id" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>