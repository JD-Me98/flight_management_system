<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - flight_management_system</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/flight_management_system.styles.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/fonts.css" />
    <link rel="stylesheet" href="~/css/forms.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>
<body>
    
        <header>
            <div class="logo-header">
                <h2 class="poppins-bold">Flight Management System</h2>
            </div>
            <nav class="navbar">
                <div class="container">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Airport/Index">Airport</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Aircraft/Index">Aircraft</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Employee/IndexEmployee">Employee</a>
                        </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Agents/Index">Agents</a>
                    </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Agency/Index">Agency</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Flight/Index">Flight</a>
                        </li>
                    }
                    <li class="nav-item">
                            <a class="nav-link" href="/">Contact</a>
                        </li>
                    </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="auth-btn" href="/Account/Logout">Logout</a>
                }
                else
                {
                    <a class="auth-btn" href="/Account/Login">Login</a>
                 }
                </div>
            </nav>
        </header>
        <div class="main-container">
            @RenderBody()
        </div>
        <footer>
            <span class="poppins-regular">&copy; Copyright Flight Management Company 2024</span>
        </footer>
        <script src="~/js/script.js" asp-append-version=" true"></script>

        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>